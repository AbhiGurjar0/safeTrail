<body class="bg-blue-50 text-gray-800 font-sans overflow-hidden ">
  <div class="sticky top-0 z-50">
    <%- include('partials/navbar', { user: user }) %>
  </div>
  <div class="absolute top-40 w-full max-w-2xl px-4 left-1/2 -translate-x-1/2 z-100">
    <% if (success && success.length> 0) { %>
      <div class="bg-green-500 text-white px-4 py-2 rounded mb-2 shadow-lg">
        <%= success %>
      </div>
      <% } %>
        <% if (error && error.length> 0) { %>
          <div class="bg-red-500 text-white px-4 py-2 rounded mb-2 shadow-lg">
            <%= error %>
          </div>
          <% } %>
