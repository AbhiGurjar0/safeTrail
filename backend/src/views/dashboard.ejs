    /* Sparkling Text Effect for the user's name */
    .sparkle-text {
      position: relative;
      display: inline-block;
      overflow: hidden;
    }

    .sparkle-text::after {
      content: '';
      position: absolute;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.8), transparent);
      transform: translateX(-100%);
      animation: sparkle-effect 3s infinite linear 2s;
      /* Animate with a delay */
    }

    @keyframes sparkle-effect {
      0% {
        transform: translateX(-100%);
      }

      100% {
        transform: translateX(100%);
      }
    }

    /* Fade-in animation for page content */
