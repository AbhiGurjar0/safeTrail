<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title>Admin Dashboard</title>
  <script src="https://cdn.tailwindcss.com"></script>
</head>

<body class="bg-white text-gray-900 font-sans min-h-screen p-8">
  <div class="max-w-4xl mx-auto">
    <!-- Header -->
    <header class="mb-6">
      <h1 class="text-2xl font-bold">Admin Dashboard</h1>
      <p class="text-gray-500 mt-1">Manage tourists and emergency responses</p>
    </header>

    <!-- Tabs -->
    <nav class="mb-6 flex border border-gray-200 rounded-md text-gray-600 text-sm">
      <button
        class="flex-1 py-2 px-4 flex items-center justify-center gap-2 bg-gray-100 text-gray-900 font-semibold rounded-l-md border-r border-gray-200">
        <svg class="w-4 h-4" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24" aria-hidden="true">
          <path stroke-linecap="round" stroke-linejoin="round" d="M3 7h18M3 12h18M3 17h18"></path>
          <circle cx="8" cy="12" r="2" stroke="currentColor" stroke-width="2" />
        </svg>
        Tourist List
      </button>
      <button
        class="flex-1 py-2 px-4 flex items-center justify-center gap-2 hover:bg-gray-50 rounded-none border-r border-gray-200">
        <svg class="w-4 h-4" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24" aria-hidden="true">
          <path stroke-linecap="round" stroke-linejoin="round"
            d="M12 8v4m0 4h.01M6.938 4.938a10.012 10.012 0 0110.124 0"></path>
          <path stroke-linecap="round" stroke-linejoin="round" d="M21 21L3 3"></path>
        </svg>
        SOS Requests
      </button>
      <button class="flex-1 py-2 px-4 flex items-center justify-center gap-2 hover:bg-gray-50 rounded-r-md">
        <svg class="w-4 h-4" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24" aria-hidden="true">
          <path stroke-linecap="round" stroke-linejoin="round"
            d="M15 17h5l-1.405-1.405A2.032 2.032 0 0118 14.158V11a6 6 0 00-5-5.917V5a1 1 0 10-2 0v.083A6 6 0 006 11v3.159c0 .538-.214 1.055-.595 1.436L4 17h5m6 0v1a3 3 0 11-6 0v-1m6 0H9">
          </path>
        </svg>
        Safety Alerts
      </button>
    </nav>

    <!-- Registered Tourists -->
    <section id="tourist-list" class="border border-gray-200 rounded-lg p-6">
      <h2 class="flex items-center text-lg font-semibold text-gray-800 mb-1">
        <svg class="w-5 h-5 text-blue-600 mr-2" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24"
          aria-hidden="true">
          <path stroke-linecap="round" stroke-linejoin="round" d="M7 7a4 4 0 018 0m-8 4a4 4 0 018 0m-8 4a4 4 0 018 0">
          </path>
        </svg>
        Registered Tourists
      </h2>
      <p class="text-gray-500 text-sm mb-4">View and manage all registered tourists in the system</p>

      <!-- Tourist list container -->
      <div class="space-y-4">
        <%Trips.forEach((trip)=>{%>
          <div class="flex items-center justify-between border border-gray-200 rounded-md p-4">
            <div class="flex items-center gap-4">
              <div class="flex-shrink-0 p-3 rounded-lg bg-blue-50 text-blue-600">
                <svg class="w-6 h-6" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24"
                  aria-hidden="true">
                  <path stroke-linecap="round" stroke-linejoin="round"
                    d="M12 11c1.657 0 3-1.343 3-3S13.657 5 12 5 9 6.343 9 8s1.343 3 3 3z"></path>
                  <path stroke-linecap="round" stroke-linejoin="round"
                    d="M5.121 18.243A7.965 7.965 0 0112 15a7.965 7.965 0 016.879 3.243"></path>
                </svg>
              </div>
              <div>
                <div class="font-semibold text-gray-900">
                   <%=trip.userId.name%> 
                </div>
                <div class="text-xs text-gray-600">
                  TS–A7X9K2M4P
                </div>
                <div class="text-xs text-gray-600 flex items-center gap-1 mt-1">
                  Nationality: USA
                  <svg class="w-3 h-3 text-gray-400" fill="none" stroke="currentColor" stroke-width="2"
                    viewBox="0 0 24 24" aria-hidden="true">
                    <path stroke-linecap="round" stroke-linejoin="round"
                      d="M17 9a5 5 0 00-10 0c0 7 10 13 10 13s-3-3.5-3-8a2 2 0 114 0z"></path>
                  </svg>
                  <span>Paris, France</span>
                </div>
              </div>
            </div>
            <div class="flex items-center gap-3">
              <span
                class="px-2 py-0.5 text-xs font-semibold rounded-full bg-blue-600 text-white lowercase">active</span>
              <button type="button"
                class="flex items-center gap-2 px-3 py-1 border border-gray-300 rounded-md text-gray-800 text-sm hover:bg-gray-100">
                <svg class="w-4 h-4" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24"
                  aria-hidden="true">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
                  <path stroke-linecap="round" stroke-linejoin="round"
                    d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z">
                  </path>
                </svg>
                View
              </button>
            </div>
          </div>
          <% })%>


      </div>



    </section>

    <!-- SOS Emergency Requests Section -->
    <section id="sos-requests" aria-labelledby="sos-requests-title"
      class="border border-gray-200 rounded-lg p-6 bg-white">
      <h2 id="sos-requests-title" class="text-lg font-semibold text-gray-900 flex items-center gap-2 mb-1">
        <svg class="w-6 h-6 text-red-600" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24"
          stroke-linecap="round" stroke-linejoin="round">
          <path d="M10.29 3.86L1.82 18a2 2 0 0 0 1.71 3h16.94a2 2 0 0 0 1.71-3L13.71 3.86a2 2 0 0 0-3.42 0z"></path>
          <line x1="12" y1="9" x2="12" y2="13"></line>
          <line x1="12" y1="17" x2="12" y2="17"></line>
        </svg>
        SOS Emergency Requests
      </h2>
      <p class="text-gray-600 mb-6">Monitor and respond to emergency alerts from tourists</p>

      <!-- Request 1 -->
      <%emergencies.forEach((emergency)=> { %>
        <article
          class="flex flex-col md:flex-row md:justify-between bg-green-50 border border-green-200 rounded-md p-4">
          <div class="flex items-start gap-4">
            <div class="bg-green-600 text-white rounded-full w-10 h-10 flex items-center justify-center flex-shrink-0">
              <svg class="w-5 h-5" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24"
                stroke-linecap="round" stroke-linejoin="round">
                <path d="M10.29 3.86L1.82 18a2 2 0 0 0 1.71 3h16.94a2 2 0 0 0 1.71-3L13.71 3.86a2 2 0 0 0-3.42 0z">
                </path>
                <line x1="12" y1="9" x2="12" y2="13"></line>
                <line x1="12" y1="17" x2="12" y2="17"></line>
              </svg>
            </div>
            <div>
              <p class="font-semibold text-gray-900">Jane Smith</p>
              <p class="text-sm text-gray-600 mb-1">TS–B8Y1L3N5Q</p>
              <p class="text-gray-700 flex items-center gap-1 text-sm">
                <svg class="w-4 h-4 text-gray-500" fill="none" stroke="currentColor" stroke-width="2"
                  viewBox="0 0 24 24" stroke-linecap="round" stroke-linejoin="round">
                  <circle cx="12" cy="12" r="10"></circle>
                  <path d="M12 16v-4"></path>
                  <path d="M8 12h8"></path>
                </svg>
                Tower Bridge, London
              </p>
              <p class="text-gray-700 text-xs">
                Coordinates: <span class="font-mono font-semibold">51.5055° N</span>, <span
                  class="font-mono font-semibold">0.0754° W</span>
              </p>
              <p class="text-gray-500 text-xs flex items-center gap-1 mt-1">
                <svg class="w-4 h-4" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24"
                  stroke-linecap="round" stroke-linejoin="round">
                  <circle cx="12" cy="12" r="10"></circle>
                  <polyline points="12 6 12 12 16 14"></polyline>
                </svg>
                1 hour ago
              </p>
            </div>
          </div>

          <div class="flex items-start gap-3 mt-4 md:mt-0">
            <span
              class="inline-block bg-blue-600 text-white text-xs font-semibold rounded px-3 py-1 self-start">resolved</span>
          </div>
        </article>
        <% })%>
    </section>
    <!-- Safety alerts -->
    <section id="safety-alerts" class="bg-white rounded-md border border-gray-200 p-6 space-y-5 shadow-sm">
      <header class="flex items-center space-x-2">
        <svg class="w-6 h-6 text-yellow-500" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24"
          xmlns="http://www.w3.org/2000/svg" aria-hidden="true">
          <path stroke-linecap="round" stroke-linejoin="round"
            d="M15 17h5l-1.405-1.405A2.032 2.032 0 0118 14.158V11a6.002 6.002 0 00-4-5.659V4a2 2 0 10-4 0v1.341C7.67 6.165 6 8.388 6 11v3.159c0 .538-.214 1.055-.595 1.436L4 17h5m6 0v1a3 3 0 11-6 0v-1m6 0H9">
          </path>
        </svg>
        <h2 class="font-semibold text-gray-900 text-lg">Broadcast Safety Alerts</h2>
      </header>
      <p class="text-gray-600 text-sm">
        Send safety notifications to all registered tourists
      </p>

      <div>
        <label for="alert-message" class="block mb-1 text-sm font-medium text-gray-700">
          Alert Message
        </label>
        <textarea id="alert-message" name="alert-message" rows="4"
          placeholder="Enter safety alert message to broadcast to all tourists..."
          class="w-full border border-gray-300 rounded-md p-3 text-gray-700 resize-y placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-blue-400"></textarea>
      </div>

      <button onclick="broadcastAlert()"
        class="w-full bg-blue-400 hover:bg-blue-500 text-white font-semibold py-3 rounded-md flex items-center justify-center space-x-2 focus:outline-none focus:ring-2 focus:ring-blue-600"
        type="button">
        <svg class="w-5 h-5" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24"
          xmlns="http://www.w3.org/2000/svg" aria-hidden="true">
          <path stroke-linecap="round" stroke-linejoin="round" d="M12 19l7-7 7-7M5 12h14"></path>
        </svg>
        <span>Broadcast Alert to All Tourists</span>
      </button>

      <!-- Divider -->
      <hr class="border-gray-200" />

      <!-- Recent Alerts Sent -->
      <div>
        <h3 class="font-semibold text-gray-900 mb-3">Recent Alerts Sent</h3>
        <div class="space-y-3">
          <div class="border border-gray-200 rounded-md p-3">
            <p class="text-gray-800 text-sm">
              "Weather alert: Heavy rain expected in Paris area. Seek indoor shelter."
            </p>
            <p class="text-gray-400 text-xs mt-1">
              Sent 2 hours ago to 45 tourists
            </p>
          </div>
          <div class="border border-gray-200 rounded-md p-3">
            <p class="text-gray-800 text-sm">
              "Traffic disruption on A1 highway. Use public transport for faster travel."
            </p>
            <p class="text-gray-400 text-xs mt-1">
              Sent 1 day ago to 67 tourists
            </p>
          </div>
          <div class="border border-gray-200 rounded-md p-3">
            <p class="text-gray-800 text-sm">
              "Cultural festival in city center. Expect crowds but enjoy the celebrations!"
            </p>
            <p class="text-gray-400 text-xs mt-1">
              Sent 3 days ago to 89 tourists
            </p>
          </div>
        </div>
      </div>
    </section>
  </div>
  <!-- Modal -->
  <div id="mapModal" class="hidden fixed inset-0 bg-black bg-opacity-60 flex items-center justify-center">
    <div class="bg-white p-4 rounded-lg w-3/4 h-3/4">
      <button onclick="closeMap()" class="float-right bg-red-500 text-white px-3 py-1 rounded">X</button>
      <iframe id="mapFrame" class="w-full h-full" style="border:0;" allowfullscreen="" loading="lazy"></iframe>
    </div>
  </div>


  <!-- fucntion -->
  <script src="/socket.io/socket.io.js"></script>

  <script>
    document.addEventListener("DOMContentLoaded", () => {
      const tabs = document.querySelectorAll("nav button");
      const sections = [
        document.getElementById("tourist-list"),
        document.getElementById("sos-requests"),
        document.getElementById("safety-alerts"),
      ];

      tabs.forEach((tab, index) => {
        tab.addEventListener("click", () => {

          sections.forEach(section => section.classList.add("hidden"));
          sections[index].classList.remove("hidden");
          tabs.forEach(btn => btn.classList.remove("bg-gray-100", "text-gray-900", "font-semibold"));
          tab.classList.add("bg-gray-100", "text-gray-900", "font-semibold");
        });
      });
    });
    const socket = io();

    socket.on("tripStarted", (data) => {
      console.log("Trip started:", data);
      // Find the tourist list container

      showMap(data.location.lat, data.location.long);
      const touristList = document.querySelector("#tourist-list .space-y-4");
      if (touristList) {
        // Create a new tourist card element
        const card = document.createElement("div");
        card.className = "flex items-center justify-between border border-gray-200 rounded-md p-4";
        card.innerHTML = `
      <div class="flex items-center gap-4">
        <div class="flex-shrink-0 p-3 rounded-lg bg-blue-50 text-blue-600">
          <svg class="w-6 h-6" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24" aria-hidden="true">
            <path stroke-linecap="round" stroke-linejoin="round"
              d="M12 11c1.657 0 3-1.343 3-3S13.657 5 12 5 9 6.343 9 8s1.343 3 3 3z"></path>
            <path stroke-linecap="round" stroke-linejoin="round"
              d="M5.121 18.243A7.965 7.965 0 0112 15a7.965 7.965 0 016.879 3.243"></path>
          </svg>
        </div>
        <div>
          <div class="font-semibold text-gray-900">
            ${data.userId?.name || "Unknown"}
          </div>
          <div class="text-xs text-gray-600">
            ${data.tripCode || "TS–XXXXXXX"}
          </div>
          <div class="text-xs text-gray-600 flex items-center gap-1 mt-1">
            Nationality: ${data.nationality || "Unknown"}
            <svg class="w-3 h-3 text-gray-400" fill="none" stroke="currentColor" stroke-width="2"
              viewBox="0 0 24 24" aria-hidden="true">
              <path stroke-linecap="round" stroke-linejoin="round"
                d="M17 9a5 5 0 00-10 0c0 7 10 13 10 13s-3-3.5-3-8a2 2 0 114 0z"></path>
            </svg>
            <span>${data.location || "Unknown"}</span>
          </div>
        </div>
      </div>
      <div class="flex items-center gap-3">
        <span class="px-2 py-0.5 text-xs font-semibold rounded-full bg-blue-600 text-white lowercase">active</span>
        <button type="button"
          class="flex items-center gap-2 px-3 py-1 border border-gray-300 rounded-md text-gray-800 text-sm hover:bg-gray-100">
          <svg class="w-4 h-4" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24"
            aria-hidden="true">
            <path stroke-linecap="round" stroke-linejoin="round" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
            <path stroke-linecap="round" stroke-linejoin="round"
              d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z">
            </path>
          </svg>
          View
        </button>
      </div>
    `;
        // Add the new card to the top of the list
        touristList.prepend(card);
      }

    });
    socket.on('emergency', (data) => {
      console.log('Emergency SOS received:', data);
      showMap(data.location.lat, data.location.long);
      // You can add code here to update the SOS requests section in real-time
    });

    socket.on("tripEnded", (data) => {
      console.log("Trip ended:", data);
      // Update UI (mark trip as Completed)
    });
    broadcastAlert = () => {
      const message = document.getElementById("alert-message").value;
      if (!message.trim()) {
        alert("Please enter an alert message.");
        return;
      }
      // Emit the alert to the server
      socket.emit("broadcastAlert", { message });
      alert("Alert broadcasted to all tourists.");
      document.getElementById("alert-message").value = "";
    };
    function showMap(lat, lng) {
      document.getElementById("mapModal").classList.remove("hidden");
      document.getElementById("mapFrame").src =
        `https://www.google.com/maps?q=${lat},${lng}&z=15&output=embed`;
    }

    function closeMap() {
      document.getElementById("mapModal").classList.add("hidden");
      document.getElementById("mapFrame").src = "";
    }
  </script>


</body>

</html>