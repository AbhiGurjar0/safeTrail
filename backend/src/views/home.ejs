    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
    <style>
        /* Blurred background image */
        .blurred-bg {
            background-image: url(../images/background.jpg);
            background-size: cover;
            background-position: center;
            background-attachment: fixed;
            background-repeat: no-repeat;
        }

        /* Frosted glass effect for cards and input bar */
        .frosted-card,
        .frosted-input,
        .frosted-section {
            backdrop-filter: blur(10px);
            background-color: rgba(255, 255, 255, 0.6);
            border: 1px solid rgba(255, 255, 255, 0.2);
        }

        /* Styling for the collapsible FAQ answers */
        .faq-answer {
            max-height: 0;
            overflow: hidden;
            transition: max-height 0.3s ease-out;
        }

        .faq-answer.open {
            max-height: 500px;
            transition: max-height 0.5s ease-in;
        }

        /* Styling for the rotating arrow icon */
        .faq-arrow {
            transition: transform 0.3s ease;
        }

        .faq-arrow.rotate {
            transform: rotate(-180deg);
        }

        /* Keyframes for animations */

        @keyframes fadeInUp {
            from {
                opacity: 0;
                transform: translateY(20px);
            }

            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        @keyframes sparkle-animation {
            to {
                background-position: 200% center;
            }
        }

        /* --- NEW MARQUEE ANIMATION --- */
        @keyframes marquee-scroll {
            from {
                transform: translateX(0);
            }

            to {
                transform: translateX(-50%);
            }
        }

        /* Header Nav Link Styling */
        .header-nav-link {
            transition: all 0.2s ease-in-out;
            padding: 4px 0;
        }

        .header-nav-link:hover {
            font-weight: 700;
            text-shadow: 0 1px 3px rgba(0, 0, 0, 0.15);
            transform: scale(1.1);
        }

        /* Brand Logo Sparkle Style */
        .brand-logo {
            background-image: linear-gradient(-75deg, #1e293b 30%, #94a3b8 50%, #1e293b 70%);
            background-size: 200% auto;
            color: #000;
            background-clip: text;
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            animation: sparkle-animation 4s linear infinite;
        }

        /* Feature Card Styles */
        .perspective-grid {
            perspective: 1200px;
        }

        .feature-card {
            transition: transform 0.4s cubic-bezier(0.23, 1, 0.32, 1), box-shadow 0.4s cubic-bezier(0.23, 1, 0.32, 1);
        }

        .feature-card:hover {
            transform: rotateY(-3deg) rotateX(5deg) scale(1.05);
        }

        .feature-card.blue:hover {
            box-shadow: 0 25px 50px -12px rgba(59, 130, 246, 0.25);
        }

        .feature-card.yellow:hover {
            box-shadow: 0 25px 50px -12px rgba(234, 179, 8, 0.25);
        }

        .feature-card.red:hover {
            box-shadow: 0 25px 50px -12px rgba(239, 68, 68, 0.25);
        }

        .feature-card.teal:hover {
            box-shadow: 0 25px 50px -12px rgba(20, 184, 166, 0.25);
        }

        .feature-card.green:hover {
            box-shadow: 0 25px 50px -12px rgba(34, 197, 94, 0.25);
        }

        /* --- NEW STYLES FOR TESTIMONIALS --- */
        .scrolling-wrapper {
            overflow: hidden;
            position: relative;
            -webkit-mask-image: linear-gradient(to right, transparent, black 15%, black 85%, transparent);
            mask-image: linear-gradient(to right, transparent, black 15%, black 85%, transparent);
        }

        .scrolling-content {
            display: flex;
            width: fit-content;
            animation: marquee-scroll 25s linear infinite;
        }

        .scrolling-wrapper:hover .scrolling-content {
            animation-play-state: paused;
        }

        .testimonial-card {
            flex-shrink: 0;
            width: 380px;
            margin: 0 1rem;
        }
    </style>
</head>

