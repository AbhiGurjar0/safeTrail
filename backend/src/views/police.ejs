                            <div class="border-t-2 border-blue-500 w-full"></div>

                        </div>

                        <!-- End City -->
                        <div class="flex flex-col items-center">
                            <div class="flex items-center gap-2">
                                <i data-feather="map-pin" class="w-5 h-5 text-green-600"></i>
                                <span class="text-lg">Delhi</span>
                            </div>
                            <span class="text-sm text-gray-500">12 Sep 2025, 05:00 PM</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <script>
        const tabs = {
            touristTab: "touristList",
            sosTab: "sosRequests",
            alertsTab: "safetyAlerts"
        };

        Object.keys(tabs).forEach(tabId => {
            document.getElementById(tabId).addEventListener("click", () => {
                // Hide all tab content
                Object.values(tabs).forEach(c => document.getElementById(c).classList.add("hidden"));
                document.getElementById(tabs[tabId]).classList.remove("hidden");

                // Reset tabs
                Object.keys(tabs).forEach(t => {
                    document.getElementById(t).classList.remove("bg-white", "text-gray-800", "shadow-sm");
                    document.getElementById(t).classList.add("text-gray-500");
                });

                // Activate clicked tab
                const activeTab = document.getElementById(tabId);
                activeTab.classList.add("bg-white", "text-gray-800", "shadow-sm");
                activeTab.classList.remove("text-gray-500");
            });
        });

        feather.replace(); // refresh icons




        function viewTourist(name) {
            document.getElementById("touristModal").classList.remove("hidden");
        }
        function closeTouristModal() {
            document.getElementById("touristModal").classList.add("hidden");
        }
    </script>

